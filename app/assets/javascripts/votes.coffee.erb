<% environment.context_class.instance_eval { include Rails.application.routes.url_helpers } %>
vote = (url, value, that) ->
  $.post(url, {'vote[value]': value})
    .done (data) ->
      $(that).siblings('.vote-count').text(data)
    .error (data) ->
      if (data.status == 422)
        $('#main').before('<p class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><b class="fa fa-warning"></b>Ya has votado este plato.</div>')
      else
        $('#main').before('<p class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><b class="fa fa-warning"></b> Tienes que estar identificado para votar. <a href="<%= new_user_session_path %>">Identif√≠cate</a>.</div>')

$(document).on "turbolinks:load", ->
  $('.btn-upvote').click (e) ->
    e.preventDefault()
    vote($(this).attr('href'), 1, this)

  $('.btn-downvote').click (e) ->
    e.preventDefault()
    vote($(this).attr('href'), -1, this)
