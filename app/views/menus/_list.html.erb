  <thead>
    <tr>
      <th>Date</th>
      <th>Meal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% menus.order(served_at: :desc).each do |menu| %>
      <tr>
        <td><%= l menu.served_at, format: :menu %></td>
        <td><%= menu.meal %></td>
        <td><%= link_to 'Editar', edit_cafeteria_menu_path(menu.cafeteria, menu) %></td>
        <td><%= link_to 'Eliminar', cafeteria_menu_path(menu.cafeteria, menu), method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
