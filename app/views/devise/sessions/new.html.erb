<% if devise_mapping.omniauthable? %>
  <p class="text-center text-muted">Entrar con</p>
  <p class="text-center">
    <%= render 'devise/shared/oauth' %>
  </p>

  <p class="text-center text-muted" style="margin-top: 2rem">o bien entra con tu cuenta</p>
<% end %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean, label: 'Recordarme?' if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Log in', class: 'btn btn-primary' %>
  </div>
<% end %>
