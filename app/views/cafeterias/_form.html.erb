<%= simple_form_for(cafeteria, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :image_url %>
    <%= f.input :location %>
    <%= f.input :hours %>
    <%= f.input :phone %>
    <%= f.input :needs_mentor %>
  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-sm-9 col-sm-offset-3">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
