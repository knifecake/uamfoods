<div class="panel panel-default">
  <div class="panel-heading">Cafeteria</div>
<%= simple_form_for(cafeteria, html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :hours %>
    <%= f.input :phone %>
    <%= f.input :needs_mentor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
