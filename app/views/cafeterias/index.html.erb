<div class="panel panel-default">
  <div class="panel-heading">
    Cafeterías
    <%= link_to '<i class="fa fa-plus"></i> Añadir cafetería'.html_safe, new_cafeteria_path, class: 'pull-right' %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Horario</th>
        <th>Teléfono</th>
        <th>Mentor?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cafeterias.each do |cafeteria| %>
        <tr>
          <td><%= link_to cafeteria.name, cafeteria %></td>
          <td><%= cafeteria.hours %></td>
          <td><%= cafeteria.phone %></td>
          <td><%= not cafeteria.needs_mentor %></td>
          <td><%= link_to 'Ver', cafeteria %></td>
          <td><%= link_to 'Editar', edit_cafeteria_path(cafeteria) %></td>
          <td><%= link_to 'Borrar', cafeteria, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
