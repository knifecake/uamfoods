<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>UAMfoods admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <span class="navbar-brand"><i class="fa fa-cutlery"></i> UAMfoods</span>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li<%= ' class="active"'.html_safe if controller_name == 'cafeterias' %>><%= link_to "Cafeterias", cafeterias_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= "Hola, #{current_admin.name}" %> <i class="fa fa-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to ('<i class="fa fa-sign-out"></i> Salir').html_safe, destroy_admin_session_path, method: :delete %>
              </ul>
            <li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if alert %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <b class="fa fa-warning"></b> <%= alert %>
        </div>
      <% end %>
      <% if notice %>
        <div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <b class="fa fa-info-circle"></b> <%= notice %>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-8">
          <%= yield :main %>
        </div>

        <div class="col-md-4">
          <%= yield :sidebar %>
        </div>
      </div>

      <%= yield %>

      <footer>
        <p>Build in 2017 by Elias Hernandis. MIT Licensed.</p>
      </footer>
    </div>
  </body>
</html>
