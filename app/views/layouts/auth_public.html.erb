<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>UAMfoods</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="unauthenticated">
    <div class="container">
      <h1 class="signin-brand">UAMfoods</h1>

      <div class="panel panel-default signin-wrapper">
        <div class="panel-heading"><i class="fa fa-lock"></i> Necesitas iniciar sesi√≥n</div>
        <div class="panel-body">

          <% if alert %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <b class="fa fa-warning"></b> <%= alert %>
            </div>
          <% end %>
          <% if notice %>
            <div class="alert alert-info alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <b class="fa fa-info-circle"></b> <%= notice %>
            </div>
          <% end %>

          <%= yield %>

          <br>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </body>
</html>
